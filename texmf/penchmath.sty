%% Different Derivatives
% Ordinary Derivative
\newcommand*{\dd}[3][]{%
  \ifthenelse{\equal{#1}{}}
  {\frac{\rmd #2}{\rmd #3}}%
  {\frac{\rmd^{#1}#2}{{\rmd #3}^{#1}}}%
}

% Partial Derivative
\newcommand*{\pdd}[3][]{%
  \ifthenelse{\equal{#1}{}}
  {\frac{\partial #2}{\partial #3}}%
  {\frac{\partial^{#1} #2}{\partial #3^{#1}}}%
}


\newcommand*{\grad}[1][]
{
  \ifthenelse{\equal{#1}{}} { \nabla } { \nabla_{#1} }
}

\newcommand*{\curl}[1][]
{
  \ifthenelse{\equal{#1}{}}
  {
    \nabla \times
  }
  {
    \nabla_{#1} \times
  }
}


\AtBeginDocument{
  \let\division\div
  \let\div\relax
  \newcommand*{\div}[1][]
  {
    \ifthenelse{\equal{#1}{}}
    {
      \nabla \pdot
    }
    {
      \nabla_{#1} \pdot
    }
  }
}

